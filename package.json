{
    "name": "vbox-server",
    "description": "vBox - video server",
    "version": "0.0.1",
    "author": {
        "name": "D-LUSiON",
        "email": "d_lusion@abv.bg",
        "url": "https://github.com/D-LUSiON/"
    },
    "license": "MIT",
    "keywords": [
        "vbox",
        "video",
        "player",
        "server",
        "Electron",
        "Angular 4"
    ],
    "homepage": "https://github.com/D-LUSiON/",
    "repository": "https://github.com/D-LUSiON/",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "electron": "\"node_modules\\.bin\\electron\" .",
        "dev": "cp ./electron/env/environment.dev.js ./electron/environment.js && concurrently \"ng build --base-href ./ --watch --sourcemaps true --progress false --delete-output-path false\" \"\"node_modules\\.bin\\electron\" .\"",
        "build": "ng build --prod --aot --build-optimizer --vendor-chunk --extract-css --output-hashing all --base-href . --output-path ./build/",
        "postbuild": "npm run electron:setup",
        "electron:setup": "gulp setup_electron && cp ./electron/env/environment.prod.js ./build/environment.js && cd ./build && npm install && npm update --save-dev && npm update --save && cd ..",
        "package:windows": "npm run build && npm run package:windows:nobuild",
        "package:windows:asar": "npm run build && npm run package:windows:nobuild:asar",
        "package:windows:nobuild": "cd ./build/ && electron-packager . --overwrite --asar=false --platform=win32 --arch=ia32 --prune=true --out=../app && cd ..",
        "package:windows:nobuild:asar": "cd ./build/ && electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=../app && cd ..",
        "package:linux": "npm run build && npm run package:linux:nobuild",
        "package:linux:asar": "npm run build && npm run package:linux:nobuild:asar",
        "package:linux:nobuild": "cd ./build/ && electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --out=../app",
        "package:linux:nobuild:asar": "cd ./build/ && electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=../app",
        "package:mac": "npm run build && electron-packager ./build/ --overwrite --asar=true --platform=darwin --arch=x64 --prune=true --out=../app",
        "installer:mac": "electron-installer-dmg ./release-builds/Electron\\ Angular\\ Boilerplate-darwin-x64/Electron\\ Angular\\ Boilerplate.app electron-boilerplate-app --out=../app --overwrite",
        "installer:linux": "electron-installer-debian --src ../app/ERP-linux-x64 --dest ../app/installers/ --arch amd64",
        "installer:windows": "gulp create-windows-installer",
        "full-build:mac": "npm run build && npm run package:mac && npm run create-installer:mac",
        "full-build:win": "npm run package:windows:asar && gulp create-windows-installer",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e"
    },
    "main": "electron/main.js",
    "private": true,
    "dependencies": {
        "@angular/common": "^4.0.0",
        "@angular/compiler": "^4.0.0",
        "@angular/core": "^4.0.0",
        "@angular/forms": "^4.0.0",
        "@angular/http": "^4.0.0",
        "@angular/platform-browser": "^4.0.0",
        "@angular/platform-browser-dynamic": "^4.0.0",
        "@angular/router": "^4.0.0",
        "bootstrap": "3.3.7",
        "core-js": "^2.4.1",
        "electron-window-state": "4.1.1",
        "font-awesome": "4.7.0",
        "nedb": "1.8.0",
        "ng2-toasty": "4.0.3",
        "ngx-dropdown": "0.0.22",
        "ngx-electron": "1.0.3",
        "rxjs": "^5.1.0",
        "zone.js": "^0.8.4"
    },
    "devDependencies": {
        "@angular/cli": "1.4.4",
        "@angular/compiler-cli": "^4.0.0",
        "@types/jasmine": "2.5.38",
        "@types/node": "~6.0.60",
        "codelyzer": "~2.0.0",
        "concurrently": "^3.5.0",
        "electron": "^1.7.9",
        "electron-packager": "8.7.2",
        "electron-reload": "^1.2.1",
        "electron-windows-installer": "1.7.8",
        "electron-winstaller": "^2.6.3",
        "gulp": "3.9.1",
        "gulp-rename": "1.2.2",
        "jasmine-core": "~2.5.2",
        "jasmine-spec-reporter": "~3.2.0",
        "karma": "~1.4.1",
        "karma-chrome-launcher": "~2.0.0",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^0.2.0",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.0",
        "ts-node": "~2.0.0",
        "tslint": "~4.5.0",
        "typescript": "~2.2.0",
        "webpack": "3.6.0"
    }
}
